{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Slyde",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#data-types"
		}, 
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "entity.name.tag.slyde",
				"match": "\\b(if|while|for|return|class)\\b"
			},{
				"name": "keyword.operator.slyde",
				"match": "\\b(=|==|!=|<|>|<=|>=)\\b"
			},
			{
				"name":"constant.numeric.slyde",
				"match": "\\d"
			},
			{
				"name":"constant.language.slyde",
				"match": "\\b(true|false|on|off|yes|no)\\b"
			},
			{
				"name": "variable.other.local.slyde",
				"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.slyde",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.slyde",
					"match": "\\\\."
				}
			]
		},
		"data-types": {
			"patterns": [
				{
				"name": "entity.name.type.slyde",
				"match": "\\b(int|float|void|boolean|String)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.slyde",
					"match": "//.*"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/",
					"patterns": [
						{
							"name": "comment.block.documentation.slyde",
							"match": "\\*\\*.*"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.slyde"
}